<div class "span12">
  <h2>My Groups</h2>
    <table class ="table">
      <thead> 
        <tr>
          <td>#</td>
          <td>Title</td>
          <td>Description</td>
          <td>Post count</td>
          <td>Last Update</td>
      	</tr>
      </thead>
      <tbody>
        <%@groups.each do |group| %>
        <td>#</td>
        <td><%=link_to(group.title,group_path(group))%></td>
        <td><%=group.description%></td>
        <td><%=group.posts.count%></td>
        <td><%=group.updated_at.to_s(:short)%></td>
        <%end%>
      </tbody>
    </table>
</div>